<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_height"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/track_back"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_track_back" />

        <ImageView
            android:id="@+id/rewind"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_rewind" />

        <ImageView
            android:id="@+id/play_pause"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_stop" />

        <ImageView
            android:id="@+id/fast_forward"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_fast_forward" />

        <ImageView
            android:id="@+id/track_forward"
            android:layout_width="@dimen/control_icon"
            android:layout_height="@dimen/control_icon"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_track_forward" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#2000"
        android:foreground="#66ff"
        android:indeterminate="false"
        android:padding="@dimen/margin_small" />
</LinearLayout>